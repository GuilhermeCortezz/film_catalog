{
  "expo": {
    "name": "Film Catalog",
    "slug": "film-catalog",
    "version": "1.0.0",
    "scheme": "filmcatalog",
    "orientation": "portrait",
    "icon": "./assets/icone.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/icone.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "platforms": [
      "ios",
      "android"
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.filmcatalog.app",
      "infoPlist": {
        "NSCalendarsUsageDescription": "Este app precisa acessar seu calend√°rio para criar lembretes de filmes agendados."
      }
    },
    "android": {
      "icon": "./assets/icone.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icone.png",
        "backgroundColor": "#1a1a1a"
      },
      "package": "com.filmcatalog.app",
      "permissions": [
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR"
      ],
      "requestLegacyExternalStorage": true
    },
    "extra": {
      "eas": {
        "projectId": "db2dcac5-e202-4b53-9013-eca4c9be7596"
      }
    },
    "plugins": [
      "expo-font",
      "expo-calendar"
    ]
  }
}
